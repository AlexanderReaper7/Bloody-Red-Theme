	<!-- Dark Notifications -->
    <style name="TextAppearance.NotificationGuts" parent="@*android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">roboto-regular</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Secondary" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:textColor">#ffaaaaaa</item>
        <item name="android:alpha">1.0</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Primary" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:alpha">1.0</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Radio" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:alpha">1.0</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Button" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance.Material.Notification.Parenthetical" parent="@*android:style/TextAppearance.Material.Notification">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#ffffffff</item>
