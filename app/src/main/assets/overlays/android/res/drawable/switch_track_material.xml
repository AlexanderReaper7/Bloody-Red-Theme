<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_mediumAnimTime"
    android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_checked="true" android:state_enabled="true" >
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false"
            android:visible="true" android:tint="?android:attr/colorAccent">
            <solid android:color="#80ffffff" />
            <corners android:radius="25.0dip" />
            <size android:width="22.0dip" android:height="22.0dip" />
            <stroke android:width="1.0dp" android:color="#ffffffff" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false"
            android:visible="true" android:tint="?android:attr/colorAccent">
            <solid android:color="#4dffffff" />
            <corners android:radius="25.0dip" />
            <size android:width="22.0dip" android:height="22.0dip" />
            <stroke android:width="1.0dp" android:color="#ccffffff" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="true" >
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false"
            android:visible="true">
            <solid android:color="#80757575" />
            <corners android:radius="25.0dip" />
            <size android:width="22.0dip" android:height="22.0dip" />
            <stroke android:width="1.0dp" android:color="#ff757575" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false" >
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false"
            android:visible="true">
            <solid android:color="#80555555" />
            <corners android:radius="25.0dip" />
            <size android:width="22.0dip" android:height="22.0dip" />
            <stroke android:width="1.0dp" android:color="#ff555555" />
        </shape>
    </item>
</selector>