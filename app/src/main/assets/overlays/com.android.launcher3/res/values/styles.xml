<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WidgetContainerTheme" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:colorSecondary">@android:color/holo_blue_dark</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_dark</item>
    </style>
    <style name="Settings" parent="@android:style/Theme.Material">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_dark</item>
    </style>
	    <style name="Icon.DeepShortcut" parent="@*com.android.launcher3:style/Icon">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">start|center</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:drawablePadding">@*com.android.launcher3:dimen/deep_shortcut_drawable_padding</item>
        <item name="android:drawableEnd">@*com.android.launcher3:drawable/deep_shortcuts_drag_handle</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">@*com.android.launcher3:dimen/bg_pill_height</item>
        <item name="android:paddingEnd">@*com.android.launcher3:dimen/deep_shortcut_padding_end</item>
        <item name="android:elevation">@*com.android.launcher3:dimen/deep_shortcuts_elevation</item>
        <item name="@*com.android.launcher3:layoutHorizontal">true</item>
        <item name="@*com.android.launcher3:iconSizeOverride">@*com.android.launcher3:dimen/deep_shortcut_icon_size</item>
        <item name="@*com.android.launcher3:customShadows">false</item>
    </style>
</resources>
