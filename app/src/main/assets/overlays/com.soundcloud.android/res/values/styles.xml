<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SoundCloud.Toolbar" parent="@*com.soundcloud.android:style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@*com.soundcloud.android:color/charcoal</item>
        <item name="android:backgroundTint">#212121</item>
    </style>
    <style name="TabsThemeBase" parent="@*com.soundcloud.android:style/Widget.Design.TabLayout">
        <item name="android:background">@*com.soundcloud.android:color/white</item>
        <item name="*com.soundcloud.android:custom_font">@*com.soundcloud.android:string/interstate_light</item>
        <item name="*com.soundcloud.android:tabSelectedTextColor">@*com.soundcloud.android:color/soundcloud_orange</item>
        <item name="android:backgroundTint">#212121</item>
    </style>
    <style name="Profile.ToggleButton" parent="@*com.soundcloud.android:style/Profile">
        <item name="android:textSize">@*com.soundcloud.android:dimen/btn_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@*com.soundcloud.android:dimen/profile_btn_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="FooterToggle" parent="@*com.soundcloud.android:style/CustomToggle">
        <item name="android:background">@*com.soundcloud.android:drawable/btn_footer_play_toggle</item>
        <item name="android:layout_width">@*com.soundcloud.android:dimen/player_footer_control</item>
        <item name="android:layout_height">@*com.soundcloud.android:dimen/player_footer_control</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="ListItemOverflowButton">
        <item name="android:background">@*com.soundcloud.android:drawable/btn_list_overflow</item>
        <item name="android:layout_marginBottom">6.0dip</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="LollipopDialogStyle" parent="@*com.soundcloud.android:style/Theme.AppCompat.Dialog">
        <item name="*com.soundcloud.android:colorAccent">@*com.soundcloud.android:color/soundcloud_orange</item>
        <item name="android:backgroundTint">#303030</item>
        <item name="android:windowBackground">@*com.soundcloud.android:color/primary_dark</item>
    </style>

    <style name="Theme.ScAuth" parent="@*com.soundcloud.android:style/Theme.SoundCloud.NoActionBar">
        <item name="android:buttonStyle">@*com.soundcloud.android:style/AuthButton</item>
        <item name="android:windowBackground">@*com.soundcloud.android:color/dark_bg</item>
        <item name="android:autoCompleteTextViewStyle">@*com.soundcloud.android:style/Widget.AppCompat.Light.AutoCompleteTextView</item>
        <item name="android:dropDownItemStyle">@*com.soundcloud.android:style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="SignUp.Info" parent="@*com.soundcloud.android:style/SignUp">
        <item name="android:textAppearance">?*android:textAppearanceSmallInverse</item>
        <item name="android:textColorLink">@*com.soundcloud.android:drawable/txt_blue_states</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="SignUp.TermsText" parent="@*com.soundcloud.android:style/SignUp">
        <item name="android:textAppearance">?*android:textAppearanceLargeInverse</item>
        <item name="android:textColorLink">@*com.soundcloud.android:drawable/txt_blue_states</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="SignUp.TermsMessage" parent="@*com.soundcloud.android:style/SignUp.TermsText">
        <item name="android:layout_margin">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="Onboarding.NextButton" parent="@*com.soundcloud.android:style/Onboarding.Button">
        <item name="android:background">@*com.soundcloud.android:drawable/signup_next_button</item>
        <item name="android:backgroundTint">#ff333333</item>
    </style>
    <style name="Onboarding.CancelButton" parent="@*com.soundcloud.android:style/Onboarding.Button">
        <item name="android:background">@*com.soundcloud.android:drawable/signup_cancel_button</item>
        <item name="android:backgroundTint">#ff505050</item>
    </style>
</resources>
