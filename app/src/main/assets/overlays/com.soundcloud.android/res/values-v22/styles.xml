<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme.Base" parent="@*com.soundcloud.android:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@*com.soundcloud.android:color/primary_dark</item>
        <item name="android:autoCompleteTextViewStyle">@*com.soundcloud.android:style/Widget.AppCompat.AutoCompleteTextView</item>
        <item name="android:listViewStyle">@*com.soundcloud.android:style/ListView</item>
        <item name="android:windowAnimationStyle">@*com.soundcloud.android:style/Animation.Activity</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowLightStatusBar">@*com.soundcloud.android:bool/light_status_bar</item>
        <item name="*com.soundcloud.android:cropImageStyle">@*com.soundcloud.android:style/Widget.CropImageView</item>
        <item name="*com.soundcloud.android:mediaRouteButtonStyle">@*com.soundcloud.android:style/Theme.MediaRouter.LightControlPanel</item>
        <item name="*com.soundcloud.android:windowActionModeOverlay">true</item>
        <item name="*com.soundcloud.android:actionModeStyle">@*com.soundcloud.android:style/Theme.SoundCloud.ActionMode</item>
        <item name="*com.soundcloud.android:popupMenuStyle">@*com.soundcloud.android:style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
        <item name="*com.soundcloud.android:searchViewStyle">@*com.soundcloud.android:style/SearchView.SoundCloud</item>
        <item name="*com.soundcloud.android:colorPrimary">@*com.soundcloud.android:color/primary</item>
        <item name="*com.soundcloud.android:colorPrimaryDark">@*com.soundcloud.android:color/primary_dark</item>
        <item name="*com.soundcloud.android:colorAccent">@*com.soundcloud.android:color/soundcloud_orange</item>
        <item name="android:backgroundTint">#212121</item>
        <item name="android:listDivider">@*android:color/transparent</item>
        <item name="android:navigationBarColor">#181818</item>
    </style>
</resources>
