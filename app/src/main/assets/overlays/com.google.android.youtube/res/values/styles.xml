<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:navigationBarColor">@android:color/holo_blue_dark</item>
    </style>
    <style name="Theme.YouTube.Settings" parent="@*com.google.android.youtube:style/Theme.YouTube.Light.NoActionBar">
        <item name="colorPrimary">@android:color/holo_blue_bright</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="colorAccent">@android:color/holo_blue_bright</item>
        <item name="colorControlActivated">@android:color/holo_blue_light</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_dark</item>
        <item name="android:windowBackground">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#ffaaaaaa</item>
    </style>
    <style name="SpinnerItem" parent="@*com.google.android.youtube:style/Widget.YouTube.TextView">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:minHeight">48.0dip</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="SpinnerItem.Dropdown" parent="@*com.google.android.youtube:style/SpinnerItem">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>
    <style name="Theme.YouTube.Home" parent="@*com.google.android.youtube:style/Theme.YouTube.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
