<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category"
    android:layout_width="match_parent"
    android:layout_height="@*com.android.settings:dimen/dashboard_category_height"
    android:orientation="vertical"
    android:paddingBottom="0dip"
    android:background="@android:color/holo_blue_light"
    android:elevation="2dp">

    <TextView android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:textAppearance="@*com.android.settings:style/TextAppearance.CategoryTitle"
        android:textAlignment="viewStart"
        android:paddingStart="@*com.android.settings:dimen/dashboard_category_title_margin_start"
    />
</LinearLayout>